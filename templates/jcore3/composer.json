{
	"minimum-stability": "stable",
	"repositories": {
		"satispress": {
			"type": "composer",
			"url": "https://repo.jco.fi/satispress/"
		},
		"wpackagist": {
			"type": "composer",
			"url": "https://wpackagist.org"
		}
	},
	"config": {
		"platform": {
			"php": "8.2"
		},
		"allow-plugins": {
			"composer/installers": true,
			"php-http/discovery": true,
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"extra": {
		"merge-plugin": {
			"include": [
				"modules/*/composer.json"
			],
			"recurse": true,
			"replace": false,
			"merge-dev": true,
			"merge-extra": false
		}
	},
	"require": {
		"jcore/ydin": "^3",
		"sentry/sentry": "^4",
		"jcore/dynamic-archive": "^0",
		"wpackagist-plugin/font-awesome": "*",
		"wpackagist-plugin/limit-login-attempts-reloaded": "*",
		"wpackagist-plugin/smtp2go": "*",
		"wpackagist-plugin/spinupwp": "*",
		"wpackagist-plugin/wordpress-seo": "*",
		"jco/advanced-custom-fields-pro": "*"
	},
	"require-dev": {
		"roave/security-advisories": "dev-latest",
		"squizlabs/php_codesniffer": "^3",
		"dealerdirect/phpcodesniffer-composer-installer": "^1",
		"wp-coding-standards/wpcs": "^3",
		"wpackagist-plugin/loco-translate": "*"
	}
}
