#!/bin/bash

SCRIPTWD=/tmp/script_wd
TARGETD=/usr/local/bin

sudo mkdir -p $SCRIPTWD
sudo cp -r /vagrant/.config/scripts/* $SCRIPTWD/
sudo chmod a+x $SCRIPTWD/*
sudo dos2unix -q $SCRIPTWD/*

# Hack to help with potential filesize changes #
################################################
################################################
################################################
################################################
################################################
################################################
################################################
################################################
################################################
################################################

sudo mv $SCRIPTWD/* $TARGETD
